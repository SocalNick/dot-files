[alias]
	# add
	a = add -p
	# checkout
	co = checkout
	# checkout usual branches
	master = checkout master
	develop = checkout develop
	# checkout branch, creating it if necessary
	go = checkout -B
	# commit
	ci = commit -v
	# status
	st = status
  # logs
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = white
	old = red
	new = green
	plain = white dim
[color "status"]
	added = green
	changed = blue
	untracked = red

[user]
	email = njcalugar@gmail.com
	name = Nicholas Calugar

[core]
	autocrlf = input
